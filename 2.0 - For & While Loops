#for loop - known number of time
teacher = "Thomas"

for i in range(10):
  print("Hello Anna")

for i in range(3):
  print("Python is cool!")

for someNumber in range(7):
  print(someNumber)

for Bob in range(11):
  print(Bob-10)

print("Here are the even numbers:")
for Bob in range(11):
  print(Bob*2)

#start, end, count by
for i in range(11, 22, 2):
  print(i)
  
#_________________________________________________________________
#while loop - unknown number of times (conditional)
answer = int(input("What is 2+2="))
while answer != 4:
  answer = int(input("What is 2+2="))

print("Good job! Here is the next question: ")

answer = int(input("What is 5+6="))
while answer != 11:
  answer = int(input("What is 5+6="))
