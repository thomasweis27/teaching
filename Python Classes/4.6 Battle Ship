for i in range(3): 
  column = int(input ("What column do you want to choose kid?"))
  row = int(input ("What row do you want to choose kid?"))

  if row == 1:
    row1[column-1] = "x"
  elif row == 2:
    row2[column-1] = "x"
  elif row == 3:
    row3[column-1] = "x"
  elif row == 4:
    row4[column-1] = "x"
  elif row == 5:
   row5[column-1] = "x"
   


  print (row1)
