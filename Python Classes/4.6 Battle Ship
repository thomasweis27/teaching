import random

rows = ["1","2", "3", "4","5"]
columns = ["1","2", "3", "4","5"]
computerRow1 = random.choice(rows)
computerColumn1 = random.choice(columns)
computerRow2 = random.choice(rows)
computerColumn2 = random.choice(columns)
computerRow3 = random.choice(rows)
computerColumn3 = random.choice(columns)

print(computerRow1, computerColumn1)
while True:
  columns = input ("What column do you want to choose kid?")
  rows = input ("What row do you want to choose kid?")
  if computerRow1 == rows and columns == computerColumn1:
    print("You hit a ship. NOW GO BACK TO SHOOTING KID")
  elif computerRow2 == rows and columns == computerColumn2:
    print("You hit a ship. NOW GO BACK TO SHOOTING KID")
  elif computerRow3 == rows and columns == computerColumn3:
    print("You hit a ship. NOW GO BACK TO SHOOTING KID")
  else:
    print("LMAO MISSED")  
  
